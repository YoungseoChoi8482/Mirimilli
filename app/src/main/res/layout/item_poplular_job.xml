<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- 군종 이름 -->
    <TextView
        android:fontFamily="@font/gangwon"

        android:id="@+id/branchName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="군종 이름"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="8dp" />

    <!-- Top 1, 2, 3 데이터를 담을 레이아웃 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Top 1 -->
        <LinearLayout
            android:id="@+id/top1Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp">

            <ImageView
                android:id="@+id/top1Image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_launcher_background" />

            <TextView
                android:fontFamily="@font/gangwon"

                android:id="@+id/top1Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top 1"
                android:gravity="center" />
        </LinearLayout>

        <!-- Top 2 -->
        <LinearLayout
            android:id="@+id/top2Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp">

            <ImageView
                android:id="@+id/top2Image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_launcher_background" />

            <TextView
                android:fontFamily="@font/gangwon"

                android:id="@+id/top2Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top 2"
                android:gravity="center" />
        </LinearLayout>

        <!-- Top 3 -->
        <LinearLayout
            android:id="@+id/top3Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp">

            <ImageView
                android:id="@+id/top3Image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_launcher_background" />

            <TextView
                android:fontFamily="@font/gangwon"

                android:id="@+id/top3Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top 3"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
